<div  >
  <h2>
    <%= @post.title %>
  </h2>
  <p>
    <%= @post.body %>
  </p>
  <%= link_to "Edit", edit_post_path(@post), :class => 'btn-sm btn-secondary text-decoration-none' %>
  <%= link_to "Delete", post_path(@post), method: :delete, :class => 'btn-sm btn-danger text-decoration-none' %>

  <%= render 'comments/comments' %>
  <%= render 'comments/form' %>
</div>