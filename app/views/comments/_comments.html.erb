
<h3 class="mt-3">Comments</h3>
<% @post.comments.each do |comment| %>
<div class="card bg-light m-2 mb-3">
<div class="card-body">
    <p>
    <strong>
        <%= comment.username %> 
      </strong>
    </p>
    <p>
      <%= comment.body %>
    </p>
    <%= link_to '[x]', [comment.post, comment], method: :delete %>
    </div>
  </div>
<% end %>
