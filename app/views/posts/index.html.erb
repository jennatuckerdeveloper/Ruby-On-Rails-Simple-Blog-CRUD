<div class="mt-4">
  <h1>Blog posts</h1>
    <% @post.each do |post| %>
    <div class="card bg-light my-3">
      <div class="card-body">
        <h3>
            <%= post.title %>
        </h3>
        <p>
            <%= post.body %>
        </p>
        <%= link_to "Read More!", post_path(post), :class => 'btn btn-secondary'%>
      </div>
    </div>
    <% end %>
</div>